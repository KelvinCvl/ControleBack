// Configuration de la base de données PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Fiche Créature

model Species {
  id        Int    @id @default(autoincrement()) 
  name      String @unique                         
  authorId  Int                                    
  rarityScore Float @default(1.0)                 
  createdAt DateTime @default(now())              
}

// Fiche signalement)

model Observation {
  id          Int       @id @default(autoincrement())
  speciesId   Int                                     
  authorId    Int                                     
  description String                                
  dangerLevel Int                                    
  status      Status    @default(PENDING)           
  validatedBy Int?                                   
  validatedAt DateTime?                              
  createdAt   DateTime  @default(now())              
}


// Statuts 

enum Status {
  PENDING     // En attente
  VALIDATED   // Accepté
  REJECTED    // Refusé
}
